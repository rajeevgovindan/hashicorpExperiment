{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-fce3c696",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-example {{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo apt-get update",
      "sudo apt-get install unzip",
      "sudo apt-get install -y redis-server"
    ]
  },
  {
     "type": "file",
     "source": "consul_0.8.0_linux_amd64.zip",
     "destination": "/tmp/consul_0.8.0_linux_amd64.zip"
  },
  {
     "type": "file",
     "source": "consul.d/redis.json",
     "destination": "/home/ubuntu/redis.json"
  },
  {
     "type": "file",
     "source": "consul.d/redis-check.sh",
     "destination": "/home/ubuntu/redis-check.sh"
  },
  {
     "type": "file",
     "source": "consul.d/startredis.sh",
     "destination": "/home/ubuntu/startredis.sh"
  },
  {
     "type": "shell",
     "inline": [
        "sleep 30",
        "unzip /tmp/consul_0.8.0_linux_amd64.zip",
        "sudo mv /home/ubuntu/consul /usr/sbin/consul"
     ]
  }]
}
